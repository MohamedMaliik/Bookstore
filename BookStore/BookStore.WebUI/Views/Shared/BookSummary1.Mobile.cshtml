@model BookStore.Domain.Entites.Book

<div data-role="collapsible" data-collapsed="false" data-content-theme="b">
     


        <h3>
            <strong> @Model.Title</strong>

        </h3>
    <div class="ui-grid-b">
        <div class="ui-block-a">
            @Model.Descrption
        </div>
        <div class="ui-block-b">
           <strong>@Model.Price.ToString("c")</strong> 
        </div>
        <div class="ui-block-c">
@using (Html.BeginForm("AddToCart", "Cart"))
{
    
        @Html.HiddenFor(b => b.ISBN)
        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
        <input type="submit"  data-inline="true"  data-mini="true" value="Add TO Card" />



}

            </div>


     </div>


</div>